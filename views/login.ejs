<%- include('partials/header') %>

<div class="centered">
  <div class="form-signin w-100 m-auto">
    <form action="/login" method="POST">
      <h1 id="login-page-h1" class="display-3">Please sign in</h1>

      <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="username">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
        <label for="floatingPassword"><%= password %></label>
      </div>

      <button id="login-btn" class="btn w-100 py-2" type="submit">Sign in</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
